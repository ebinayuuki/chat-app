<div class="chat-header"> <!--チャット画面ヘッダー部の親要素-->
  <div class="left-header"> <!--チャット画面ヘッダー部左側-->
    <div class="header-title">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">  <!--チャット画面ヘッダー部右側-->
    <div class="header-button"> <!--チャット画面ヘッダー部右側  ボタン-->
      <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
    </div>
  </div>
</div>



<div class="chat-messages"> <!--チャット表示部の親要素-->
  <%= render partial: 'message', collection: @messages %>
</div>


<%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
