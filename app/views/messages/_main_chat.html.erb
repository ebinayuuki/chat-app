<div class="chat-header"> <!--チャット画面ヘッダー部の親要素-->
  <div class="left-header"> <!--チャット画面ヘッダー部左側-->
    <div class="header-title">
      hogefuga
    </div>
  </div>
  <div class="right-header">  <!--チャット画面ヘッダー部右側-->
    <div class="header-button"> <!--チャット画面ヘッダー部右側  ボタン-->
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>



<div class="chat-messages"> <!--チャット表示部の親要素-->

  <div class="message-box"> <!--投稿されたひとつのチャットをまとめる親要素-->
    <div class="up-message">  <!--投稿者、時刻表示部-->
      <div class="message-user">
        Tom
      </div>
      <div class="message-date">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="post-message">  <!--投稿メッセージ表示部-->
      <div class="message-content">
        おはよう
      </div>
    </div>
  </div>

  <div class="message-box">
    <div class="up-message">
      <div class="message-user">
        Tom
      </div>
      <div class="message-date">
        2020/3/31(Wed) 12:47:30
      </div>
    </div>
    <div class="post-message">
      <div class="message-content">
        こんばんは
      </div>
    </div>
  </div>

</div>


<%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
